@page "/hospital/exams/add/{id:Guid}"
@model PrimeCareMed.Frontend.Pages.Exam.AddExamToHospitalModel
@{
    ViewData["Title"] = "Add exam";
}
<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
            <h1 style="color:#002133">@Model.Hospital.Name, @Model.Hospital.City</h1>
            <h1>@ViewData["Title"]</h1>
        </div>
        <div>
            <form id="createMedicinePrescriptionForm" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-4">
                    <select asp-for="NewHospitalExam.ExamId" class="form-select" id="select-medicine" data-placeholder="Choose exam">
                        <option></option>
                        @foreach (var exam in Model.Exams)
                        {
                                <option value="@exam.Id">@exam.Name</option>
                        }
                    </select>
                </div>
                <div class="d-flex justify-content-end ms-5 mt-3">
                    <button id="confirmMedicineSubmit" type="submit" class="btn text-white" style="background-color: #006622">Confirm</button>
                </div>


            </form>
            @if (ViewData["Message"] != null)
            {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewData["Message"]");
                        };
                    </script>
            }
        </div>
    </div>
</div>
<script>
    $('#select-medicine').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
</script>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
