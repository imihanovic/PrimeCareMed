@page "/hospital/exams/{id:Guid}"
@model PrimeCareMed.Frontend.Pages.Exam.ViewAllExamsForHospitalModel
@{
    ViewData["Title"] = "Exams";
    var keyword = ViewData["Keyword"] as string;
    var prevDisabled = !Model.Exams.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Exams.HasNextPage ? "disabled" : "";
}
<h1 style="color:#002133">@Model.Hospital.Name, @Model.Hospital.City</h1>
<h2 style="color:#002133">@ViewData["Title"]</h2>
<hr />

<div class="form-actions no-color col">
    <form asp-action="ViewAllExams" method="get">
        <div class="row">
            <div class="col-4 col-sm-7">
                <div class="input-group mb-3">
                    <input type="search" class="form-control" placeholder="Search..." name="keyword" value="@keyword">
                    <button type="submit" class="btn text-white" style="background-color:#004266"><i class="bi bi-search"></i></button>
                </div>
            </div>
            <div class="col-1">
                <a asp-action="ViewAllExams" class="btn btn-secondary clear-btn">Clear</a>
            </div>
            <div class="col-7 col-sm-4 text-end">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a class="btn text-white d-none d-lg-inline-block" style="background-color:#004266" asp-area="" asp-page="/Exam/AddExamToHospital" asp-route-id="@Model.Hospital.Id"><i class="fa-solid fa-file-pen" style="color: #ffffff;"></i> Add exam</a>
                }
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            @foreach (var property in Model.ExamModelProperties)
            {
                <th style="color:#004266">@property</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model.Exams.Count() > 0)
        {
            @foreach (var office in Model.Exams)
            {
                <tr class="align-middle">
                    <td class="d-none d-lg-table-cell">@office.Name</td>
                    <td class="d-none d-lg-table-cell">@office.Description</td>
                    <td class="d-none d-lg-table-cell">@office.Duration minutes</td>
                    <td class="d-none d-lg-table-cell">@office.Preparation</td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <ul class="pagination">
        <li class="page-item">
            <a asp-page="./ViewAllExams"
               asp-route-pageIndex="@(Model.Exams.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="page-link @prevDisabled text-white" style="background-color: #004266">
                Previous
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Exams.PageIndex ? "active" : "")">
                <a asp-page="./ViewAllExams"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-pageIndex="@i" class="page-link text-black" style="background-color:#fff">
                    @i
                </a>
            </li>
        }
        <li class="page-item">
            <a asp-page="./ViewAllExams"
               asp-route-pageIndex="@(Model.Exams.PageIndex +1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="page-link @nextDisabled text-white" style="background-color: #004266">
                Next
            </a>
        </li>
    </ul>
</div>
