@page
@model PrimeCareMed.Frontend.Pages.Appointment.ViewAllAppointmentsModel
@{
    ViewData["Title"] = "Appointments";
    var sort = ViewData["CurrentSort"] as string;
    var keyword = ViewData["Keyword"] as string;
    var dateFilter = ViewData["DateFilter"] as string;
    var prevDisabled = !Model.Appointments.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Appointments.HasNextPage ? "disabled" : "";
}
<h1>@ViewData["Title"]</h1>
<hr />

<div class="form-actions no-color col">
    <form asp-action="ViewAllAppointments" method="get">
        <div class="row">
            <div class="col-4 col-sm-7">
                 <div class="input-group mb-3">
                 <input type="search" class="form-control" placeholder="Search..." name="keyword" value="@keyword">
                 <input id="dateFilter" type="date" name="dateFilter" class="form-control" value="@dateFilter" />
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
                </div>
            </div>
            <div class="col-1">
            <a asp-action="ViewAllAppointments" class="btn btn-secondary clear-btn">Clear</a>
            </div>
            <div class="col-7 col-sm-4 text-end">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a class="btn btn-primary" asp-area="" asp-page="/Appointment/CreateAppointment"><i class="fas fa-utensils"></i> New appointment</a>
                }
            </div>
        </div>
    </form>
</div>

<table class="table table-responsive">
    <thead>
        <tr>
            @foreach (var property in Model.AppointmentModelProperties)
            {
                if (property != "Cause" && property != "Status")
                {
                    <th class="@(property == "PatientLastName" ? "" : "d-none d-lg-table-cell")">

                        @property
                        @if (sort is null)
                        {
                            <a asp-page="ViewAllAppointments" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"{@property}") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                            <a asp-page="ViewAllAppointments" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"{@property}Desc") class="sort-icon"><span class="bi bi-arrow-down"></span></a>

                        }
                        else if (sort.Contains("Desc"))
                        {
                            <a asp-page="ViewAllAppointments"
                   asp-route-sort=@($"{@property}")
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]"
                   class="sort-icon"><span class="bi bi-arrow-down"></span></a>
                        }
                        else
                        {
                            <a asp-page="ViewAllAppointments" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"{@property}Desc") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                        }
                    </th>
                }
                else
                {
                    <th class="d-none d-lg-table-cell">
                        @property
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @if (Model.Appointments.Count() > 0)
        {
            @foreach (var appointment in Model.Appointments)
            {
                <tr class="align-middle">
                    <td class="d-none d-lg-table-cell">@appointment.PatientMbo</td>
                    <td class="d-none d-lg-table-cell">@appointment.PatientFirstName</td>
                    <td class="d-none d-lg-table-cell">@appointment.PatientLastName</td>
                    <td class="d-none d-lg-table-cell">@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                    <td class="d-none d-lg-table-cell">@appointment.Cause</td>
                    @*@if (User.IsInRole("SysAdministrator"))
                    {
                        <td>
                            <form method="post">
                                <button type="submit" asp-page-handler="delete" asp-route-id="@office.Id" class="btn btn-outline-danger"
                            runat="server" CausesValidation="False"
                            onclick="return confirm('Are you certain you want to delete this office?');">
                                    <i class="bi bi-trash3-fill"></i>
                                </button>
                            </form>
                        </td>
                    }*@

                </tr>
            }
        }
    </tbody>
</table>
<div>
    <ul class="pagination">
        <li class="page-item">
            <a asp-page="./ViewAllAppointments"
               asp-route-sort="@ViewData["CurrentSort"]"
               asp-route-pageIndex="@(Model.Appointments.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-dateFilter="@ViewData["DateFilter"]"
               class="page-link @prevDisabled">
                Previous
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
                <li class="page-item @(i == Model.Appointments.PageIndex ? "active" : "")">
                <a asp-page="./ViewAllAppointments"
               asp-route-sort="@ViewData["CurrentSort"]"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-dateFilter="@ViewData["DateFilter"]"
               asp-route-pageIndex="@i" class="page-link">
                    @i
                    </a>
                </li>
        }
        <li class="page-item">
            <a asp-page="./ViewAllAppointments"
               asp-route-sort="@ViewData["CurrentSort"]"
               asp-route-pageIndex="@(Model.Appointments.PageIndex +1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-dateFilter="@ViewData["DateFilter"]"
               class="page-link @nextDisabled">
                Next
            </a>
        </li>
    </ul>
</div>
