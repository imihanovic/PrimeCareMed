<hr />

<div class="form-actions no-color col">
    <form asp-action="ViewAllPatients" method="get">
        <div class="row">
            <div class="col-4 col-sm-7">
                @* <div class="input-group mb-3">*@
                @* <input type="search" class="form-control" placeholder="Search..." name="keyword" value="@keyword">
                <select class="form-select" aria-label="Example select with button addon" name="categoryFilter">
                <option value="">All categories</option>
                @foreach (var category in Enum.GetNames(typeof(DishCategory)))
                {
                <option value="@category" selected="@(category == categoryFilter)">@category</option>
                }
                </select>
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
                </div>*@
            </div>
            @*<div class="col-1">
            <a asp-action="ViewAllDishes" class="btn btn-secondary clear-btn">Clear</a>
            </div>*@
            <div class="col-7 col-sm-4 text-end">
                @if (User.Identity!.IsAuthenticated && ((User.IsInRole("SysAdministrator"))||User.IsInRole("Doctor")||User.IsInRole("Nurse")))
                {
                    <a class="btn btn-primary" asp-area="" asp-page="/Patients/CreatePatient"><i class="fas fa-utensils"></i> Create new patient</a>
                }
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-bordered user-table">
    <thead>
        <tr>
            @foreach (var property in Model.PatientModelProperties)
            {
                <th>@property</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model.Patients.Count() > 0)
        {
            @foreach (var patient in Model.Patients)
            {
                <tr class="align-middle">
                    <td class="d-none d-lg-table-cell">@patient.FirstName</td>
                    <td class="d-none d-lg-table-cell">@patient.LastName</td>
                    <td class="d-none d-lg-table-cell">@patient.DateOfBirth.ToString("dd.MM.yyyy")</td>
                    <td class="d-none d-lg-table-cell">@patient.Email</td>
                    <td class="d-none d-lg-table-cell">@patient.PhoneNumber</td>
                    <td class="d-none d-lg-table-cell">@patient.Oib</td>
                    <td class="d-none d-lg-table-cell">@patient.Mbo</td>
                    <td class="d-none d-lg-table-cell">@patient.Gender</td>

                    @if (User.IsInRole("SysAdministrator"))
                    {
                        <td>
                        <a class="btn btn-outline-primary" asp-page="EditPatient" asp-route-id="@patient.Id"><i class="bi bi-info-lg"></i></a>
                        </td>                    
                    }

                </tr>
            }
        }
    </tbody>
</table>
