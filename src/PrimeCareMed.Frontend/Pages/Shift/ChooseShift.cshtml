@page
@model PrimeCareMed.Frontend.Pages.Shift.ChooseShiftModel
@{
    ViewData["Title"] = "Shifts";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimeCareMed.Frontend</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>
<body>
<div class="row">
    <div class="col-8">
            <h1>@ViewData["Title"]</h1>
    </div>
</div>
<hr />
<div class="search-user form-actions no-color col">
    <form asp-action="ViewAllShifts" method="get">
        <div class="row">
            <div class="col-7 col-sm-4 text-end">
                <a class="btn btn-primary" asp-area="" asp-page="CreateShift">Create new shift</a>
            </div>
        </div>
    </form>
</div>
    <div class="col-7 col-sm-4 text-end">
    @if (Model.Shifts.Count() > 0)
    {
        @foreach (var shift in Model.Shifts)
        {
                
            @if(User.IsInRole("Doctor"))
            {
                <form method="post"> 
                <button type="submit" asp-route-name="@shift.Id" class="shiftButton" text-align="center" asp-route-value="@shift.Id">
                    @shift.OfficeAddress @shift.OfficeCity <br>
                    @shift.NurseFirstName @shift.NurseLastName
                </button>
                </form>
            }
            else
            {
                <form method="post">
                <button type="submit" asp-route-name="@shift.Id" class="shiftButton" text-align="center" asp-route-value="@shift.Id">
                    @shift.OfficeAddress @shift.OfficeCity <br>
                    @shift.DoctorFirstName @shift.DoctorLastName
                </button>
                </form>
            }            
         }
     }
</div>
</body>
</html>
