@page "/office/shifts/{id:Guid}"
@model PrimeCareMed.Frontend.Pages.Shift.ViewAllShiftsForOfficeModel
@{
    ViewData["Title"] = "Shifts";
    var sort = ViewData["CurrentSort"] as string;
    var keyword = ViewData["Keyword"] as string;
    var dateFilter = ViewData["DateFilter"] as string;
    var prevDisabled = !Model.Shifts.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Shifts.HasNextPage ? "disabled" : "";
}
<h1 style="color:#002133">@Model.OfficeModel.Name, @Model.OfficeModel.City</h1>
<h3 style="color:#002133">@ViewData["Title"]</h3>
<hr />

<div class="form-actions no-color col">
    <form asp-action="ViewAllShiftsForOffice" method="get">
        <div class="row">
            <div class="col-4 col-sm-7">
                <div class="input-group mb-3">
                    <input type="search" class="form-control" placeholder="Search..." name="keyword" value="@keyword">
                    <input id="dateFilter" type="date" name="dateFilter" class="form-control d-none d-lg-table-cell" value="@dateFilter" />
                    <button type="submit" class="btn text-white" style="background-color:#004266"><i class="bi bi-search"></i></button>
                </div>
            </div>
            <div class="col-1">
                <a asp-action="ViewAllShiftsForOffice" class="btn btn-secondary clear-btn">Clear</a>
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th style="color:#004266">
                Doctor
                @if (sort is null)
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"DoctorLastName") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"DoctorLastNameDesc") class="sort-icon"><span class="bi bi-arrow-down"></span></a>

                }
                else if (sort.Contains("Desc"))
                {
                    <a asp-page="ViewAllShiftsForOffice"
                   asp-route-sort=@($"DoctorLastName")
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]"
                   class="sort-icon"><span class="bi bi-arrow-down"></span></a>
                }
                else
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"DoctorLastNameDesc") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                }
            </th>
            <th style="color:#004266">
                Nurse
                @if (sort is null)
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"NurseLastName") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"NurseLastNameDesc") class="sort-icon"><span class="bi bi-arrow-down"></span></a>

                }
                else if (sort.Contains("Desc"))
                {
                    <a asp-page="ViewAllShiftsForOffice"
                   asp-route-sort=@($"NurseLastName")
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]"
                   class="sort-icon"><span class="bi bi-arrow-down"></span></a>
                }
                else
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"NurseLastNameDesc") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                }
            </th>
            <th style="color:#004266">
                Shift started
                @if (sort is null)
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"ShiftStartTime") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"ShiftStartTimeDesc") class="sort-icon"><span class="bi bi-arrow-down"></span></a>

                }
                else if (sort.Contains("Desc"))
                {
                    <a asp-page="ViewAllShiftsForOffice"
                   asp-route-sort=@($"ShiftStartTime")
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]"
                   class="sort-icon"><span class="bi bi-arrow-down"></span></a>
                }
                else
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"ShiftStartTimeDesc") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                }
            </th>
            <th style="color:#004266">
                Shift ended
                @if (sort is null)
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"ShiftEndTime") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"ShiftEndTimeDesc") class="sort-icon"><span class="bi bi-arrow-down"></span></a>

                }
                else if (sort.Contains("Desc"))
                {
                    <a asp-page="ViewAllShiftsForOffice"
                   asp-route-sort=@($"ShiftEndTime")
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]"
                   class="sort-icon"><span class="bi bi-arrow-down"></span></a>
                }
                else
                {
                    <a asp-page="ViewAllShiftsForOffice" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-dateFilter="@ViewData["DateFilter"]" asp-route-sort=@($"ShiftStartTimeDesc") class="sort-icon"><span class="bi bi-arrow-up"></span></a>
                }
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Shifts.Count() > 0)
        {
            @foreach (var shift in Model.Shifts)
            {
                <tr class="align-middle">
                    <td class="d-none d-lg-table-cell">@shift.DoctorFirstName @shift.DoctorLastName</td>
                    <td class="d-none d-lg-table-cell">@shift.NurseFirstName @shift.NurseLastName</td>
                    <td class="d-none d-lg-table-cell">@shift.ShiftStartTime.ToString("dd.MM.yyyy. HH:mm:ss")</td>
                    @if (shift.ShiftEndTime.HasValue)
                    {
                        <td class="d-none d-lg-table-cell">@shift.ShiftEndTime?.ToString("dd.MM.yyyy. HH:mm:ss")</td>
                    }
                    else
                    {
                        <td>
                            <a>-</a>
                        </td>
                    }
                    @if (User.IsInRole("SysAdministrator"))
                    {
                        <td>
                            <a class="btn-blue-custom" asp-page="../Appointment/AppointmentsForShift" asp-route-id="@shift.Id">Appointments</a>
                        </td>
                    }
                    

                </tr>
            }
        }
    </tbody>
</table>
<div>
    <ul class="pagination">
        <li class="page-item">
            <a asp-page="./ViewAllShiftsForOffice"
               asp-route-sort="@ViewData["CurrentSort"]"
               asp-route-pageIndex="@(Model.Shifts.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-dateFilter="@ViewData["DateFilter"]"
               class="page-link @prevDisabled text-white" style="background-color: #004266">
                Previous
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Shifts.PageIndex ? "active" : "")">
                <a asp-page="./ViewAllShiftsForOffice"
               asp-route-sort="@ViewData["CurrentSort"]"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-dateFilter="@ViewData["DateFilter"]"
               asp-route-pageIndex="@i" class="page-link text-black" style="background-color:#fff">
                    @i
                </a>
            </li>
        }
        <li class="page-item">
            <a asp-page="./ViewAllShiftsForOffice"
               asp-route-sort="@ViewData["CurrentSort"]"
               asp-route-pageIndex="@(Model.Shifts.PageIndex +1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-dateFilter="@ViewData["DateFilter"]"
               class="page-link @nextDisabled text-white" style="background-color: #004266">
                Next
            </a>
        </li>
    </ul>
</div>
