@page "/vaccine/{id:Guid}"
@model PrimeCareMed.Frontend.Pages.PatientVaccines.CreatePatientVaccineModel
@{
    ViewData["Title"] = "Vaccine";
}
<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
            <h1>@ViewData["Title"]</h1>
        </div>
        <div>
            <form id="createMedicinePrescriptionForm" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-4">
                    <select asp-for="NewPatientVaccine.VaccineId" class="form-select" id="select-vaccine" data-placeholder="Choose medicine">
                        <option></option>
                        @foreach (var vaccine in Model.Vaccines)
                        {
                        <option value="@vaccine.Id">@vaccine.Name</option>
                        }
                    </select>
                </div>
                <div class="form-floating">
                    <input asp-for="NewPatientVaccine.Dosage" class="form-control" aria-required="true" />
                    <label asp-for="NewPatientVaccine.Dosage"></label>
                    <span asp-validation-for="NewPatientVaccine.Dosage" class="text-danger"></span>
                </div>
                <button id="confirmMedicineSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Confirm</button>
            </form>
            @if (ViewData["Message"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewData["Message"]");
                    };
                </script>
            }
        </div>
    </div>
</div>
<script>
    $('#select-vaccine').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
