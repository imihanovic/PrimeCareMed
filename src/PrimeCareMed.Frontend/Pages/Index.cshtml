@page
@using Microsoft.AspNetCore.Identity
@using PrimeCareMed.Core.Entities.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model IndexModel
@{
    ViewData["Title"] = "Prime Care Med";
}
<div class="text-center">
    <h1 class="display-1" style="color:#004266; font-family: Garamond, serif; font-weight:bold;">@ViewData["Title"]</h1>
    <br />
    @if (!SignInManager.IsSignedIn(User))
    {
        <div class="row ms-4">
            <div class="col text-center">
                <a class="btn-blue-custom" style="font-size: 26px" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        </div>
    }
    else
    {
        <br />
        <br />
        <br />
        <div class="display-4" style="color:#004266; font-weight:bold;">

            <p class="display-4"><cite>“Wherever the art of medicine is loved, there is also a love for humanity.”</cite></p>
            <div>
                <p class="display-6"><cite>- Hippokrat</cite></p>
            </div>
        </div>
    }
</div>
