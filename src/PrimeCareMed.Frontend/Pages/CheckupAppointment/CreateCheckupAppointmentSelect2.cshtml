@page "/appointment/details/checkup/new/{id:Guid}"
@model PrimeCareMed.Frontend.Pages.CheckupAppointment.CreateCheckupAppointmentSelect2Model
@{
    ViewData["Title"] = "New checkup appointment";
}
<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
            <h1>@ViewData["Title"]</h1>
        </div>
        <div>
            <form id="createMedicinePrescriptionForm" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-4">
                    <select asp-for="CheckupId" class="form-select" id="select-checkup" data-placeholder="Choose checkup">
                        <option></option>
                        @foreach (var checkup in Model.Checkups)
                        {
                                <option value="@checkup.Id">@checkup.Name</option>
                        }
                    </select>
                </div>
                <div class="form-floating mb-4">
                    <select asp-for="NewCheckupAppointment.HospitalId" class="form-select" id="select-hospital" data-placeholder="Choose hospital">
                        <option></option>
                    </select>
                </div>
                <div class="d-flex justify-content-end ms-5 mt-3">
                    <button id="confirmMedicineSubmit" type="submit" class="btn text-white" style="background-color: #006622">Confirm</button>
                </div>

            </form>
            @if (ViewData["Message"] != null)
            {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewData["Message"]");
                        };
                    </script>
            }
        </div>
    </div>
</div>
<script>
    $('#select-checkup').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
</script>
<script>
    $('#select-hospital').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
</script>
<script>
    $(function () {
        $("#CheckupId").on("change", function () {
            var CheckupId = $(this).val();
            $("#HospitalId").empty();
            $("#HospitalId").append("<option value=''>Select hospital</option>");
            $.getJSON(`?handler=Hospitals&CheckupId=${CheckupId}`, (data) => {
                $.each(data, function (i, item) {
                    $("#HospitalId").append(`<option value="${item.HospitalId}">${item.HospitalName}</option>`);
                });
            });
        });
    });
</script>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
