@page "/users/edit/{id:Guid}"
@using BookIt.Core.Enums
@model BookIt.Frontend.Pages.Users.EditUserModel
@{
     ViewData["Title"] = "Edit user";
}

<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
        <h1>@ViewData["Title"]</h1>
        </div>
        <div>
            <form id="editUserForm" method="post" enctype="multipart/form-data">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="EditUser.FirstName" class="form-control" aria-required="true" />
                <label asp-for="EditUser.FirstName"></label>
                <span asp-validation-for="EditUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EditUser.LastName" class="form-control" aria-required="true" />
                <label asp-for="EditUser.LastName"></label>
                <span asp-validation-for="EditUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EditUser.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="EditUser.Email"></label>
                <span asp-validation-for="EditUser.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EditUser.PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="EditUser.PhoneNumber"></label>
                <span asp-validation-for="EditUser.PhoneNumber" class="text-danger"></span>
            </div> 
            @if(User.IsInRole("Administrator"))
            {
                <div class="form-floating">
                <select asp-for = "EditUser.Role" class="form-control">
                    @foreach (var role in Enum.GetNames(typeof(UserRole)))
                    {
                        <option value="@role" selected="@(role.ToString()==Model.EditUser.Role?true:false)">@role</option>
                    }
                </select>
                <label asp-for="EditUser.Role"></label>
                </div>
            }    
            <div class="form-floating align-items-center justify-content-center mt-2">
                <button asp-page-handler="edit" class="btn btn-success">Edit</button>
                <button asp-page-handler="delete" class="btn btn-danger"
                runat="server" CausesValidation="False"
                onclick="return confirm('Are you certain you want to delete this user?');">Delete
                </button>
            </div>
            </form>
        </div>  
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
